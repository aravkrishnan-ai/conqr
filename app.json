{
  "expo": {
    "name": "Conqr",
    "slug": "conqr",
    "scheme": "conqr",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "dark",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#000000"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.aravkrishnan.conqr",
      "infoPlist": {
        "NSLocationWhenInUseUsageDescription": "Conqr needs your location to track your movements and claim territories.",
        "NSLocationAlwaysAndWhenInUseUsageDescription": "Conqr needs your location to track your movements and claim territories even when the app is in the background."
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#000000"
      },
      "package": "com.aravkrishnan.conqr",
      "permissions": [
        "ACCESS_COARSE_LOCATION",
        "ACCESS_FINE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE"
      ]
    },
    "plugins": [
      "expo-web-browser",
      [
        "@maplibre/maplibre-react-native",
        {
          "RNMapLibreMapboxMapboxGLDownloadToken": "PLACEHOLDER"
        }
      ],
      "expo-location"
    ]
  }
}